<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Products</title>
  </head>
  <body>
    <h1>Products</h1>
    <ul>
      {{#each products}}
        <li>
          <h2>{{this.title}}</h2>
          <p>{{this.description}}</p>
          <p>{{this.price}}</p>
          <p>{{this.thumbnail}}</p>
        </li>
      {{/each}}
    </ul>
    <div>
      {{#if hasPrevPage}}
        <a href="{{prevLink}}">Previous</a>
      {{/if}}
      {{#if hasNextPage}}
        <a href="{{nextLink}}">Next</a>
      {{/if}}
    </div>
  </body>
</html>